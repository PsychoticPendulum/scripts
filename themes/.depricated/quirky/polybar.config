;	##################
;	##### COLORS #####
;	##################

[colors]
background = #c0000000
foreground = #ffafbfcf
primary = #ff810af5
secondary = #ff4f006f
alert = #ffff0000

;	################
;	##### BAR1 #####
;	################

[bar/bar1]
monitor =${env:MONITOR:}
width = 100%
height = 17
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #ffffff

border-size = 5
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 2

font-0 = Source Code Pro:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = FontAwesome:pixelsize=9;1

modules-left = i3 vpn ip ping
modules-center = cpu binclock memory 
modules-right = uptime filesystem dates battery

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

;	##############
;	##### i3 #####
;	##############

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-underline = ${colors.secondary}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background}
label-visible-underline = ${self.label-unfocused-underline}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

;	#################
;	##### DATES #####
;	#################

[module/dates]
type = custom/script
exec = sh ~/Developer/.scripts/date.sh
label = %{F#810af5}%{F#afbfcf} %output%
interval = 1

;	####################
;	##### BINCLOCK #####
;	####################

[module/binclock]
type = custom/script
exec = python3 ~/Developer/.scripts/bclock.py
label = %{F#810af5}%output%
interval = 1

;	##################
;	##### UPTIME #####
;	##################

[module/uptime]
type = custom/script
exec = sh ~/Developer/.scripts/uptime.sh
label = %{F#810af5} %{F#afbfcf}%output%
interval = 1

;   ##############
;   ##### IP #####
;   ##############

[module/ip]
type = custom/script
exec = sh ~/Developer/.scripts/ip.sh
label = %{F#810af5}%{F#afbfcf} %output%
interval = 1

;   ################
;   ##### PING #####
;   ################

[module/ping]
type = custom/script
exec = sh ~/Developer/.scripts/ping.sh
label = %{F#810af5}%{F#afbfcf} %output%
interval = 1

;   #################
;   ##### LPING #####
;   #################

[module/lping]
type = custom/script
exec = sh ~/Developer/.scripts/lping.sh
label = %{F#810af5}%output%
interval = 1

;	###############
;	##### VPN #####
;	###############

[module/vpn]
type = custom/script
exec = sh ~/Developer/.scripts/vpn_active.sh
label = %{F#810af5}%{F#afbfcf} %output%

;	######################
;	##### FILESYSTEM #####
;	######################

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
; mount-1 = /mnt/media

label-mounted = %{F#810af5}%mountpoint%%{F-}: %free%
label-unmounted = %mountpoint%
label-unmounted-foreground = ${colors.secondary}

;	###############
;	##### CPU #####
;	###############

[module/cpu]
type = internal/cpu
interval = 2
label = %{F#810af5}CPU: %{F#afbfcf}%percentage%%
format = "<label> <ramp-coreload>"
format-prefix-foreground = #f90000
ramp-coreload-spacing = 0
ramp-coreload-0 = ▁
ramp-coreload-0-font = 2
ramp-coreload-0-foreground = #003ac5
ramp-coreload-1 = ▂
ramp-coreload-1-font = 2
ramp-coreload-1-foreground = #1e34af
ramp-coreload-2 = ▃
ramp-coreload-2-font = 2
ramp-coreload-2-foreground = #3c2f99
ramp-coreload-3 = ▄
ramp-coreload-3-font = 2
ramp-coreload-3-foreground = #5a2984
ramp-coreload-4 = ▅
ramp-coreload-4-font = 2
ramp-coreload-4-foreground = #78246e
ramp-coreload-5 = ▆
ramp-coreload-5-font = 2
ramp-coreload-5-foreground = #951e59
ramp-coreload-6 = ▇
ramp-coreload-6-font = 2
ramp-coreload-6-foreground = #b41943
ramp-coreload-7 = █
ramp-coreload-7-font = 2
ramp-coreload-7-foreground = #d2142e

;	##################
;	##### MEMORY #####
;	##################

[module/memory]
type = internal/memory
interval = 2
label = %{F#810af5}MEM: %{F#afbfcf} [ %gb_used% / %percentage_used%% ]
format = "<label> <ramp-used>"

ramp-used-0 = ▁
ramp-used-0-font = 2
ramp-used-0-foreground = #003ac5
ramp-used-1 = ▂
ramp-used-1-font = 2
ramp-used-1-foreground = #1e34af
ramp-used-2 = ▃
ramp-used-2-font = 2
ramp-used-2-foreground = #3c2f99
ramp-used-3 = ▄
ramp-used-3-font = 2
ramp-used-3-foreground = #5a2984
ramp-used-4 = ▅
ramp-used-4-font = 2
ramp-used-4-foreground = #78246e
ramp-used-5 = ▆
ramp-used-5-font = 2
ramp-used-5-foreground = #951e59
ramp-used-6 = ▇
ramp-used-6-font = 2
ramp-used-6-foreground = #b41943
ramp-used-7 = █
ramp-used-7-font = 2
ramp-used-7-foreground = #d2142e

;	###################
;	##### BATTERY #####
;	###################

[module/battery]
type = internal/battery
full-at = 99
format-charging = <label-charging> <ramp-capacity>
label-charging = %{F#810af5} %{F#afbfcf}%percentage%%
format-discharging = <label-discharging> <ramp-capacity>
label-discharging = %{F#810af5} %{F#afbfcf}%percentage%%
label-full = %{F#afbfcf}100% %{F#00ff00}
ramp-capacity-0 = %{F#ff0000}
ramp-capacity-1 = %{F#ff8800}
ramp-capacity-2 = %{F#ffff00}
ramp-capacity-3 = %{F#88ff00}
ramp-capacity-4 = %{F#00ff00}


[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
