;	##################
;	##### COLORS #####
;	##################

[colors]
background = #d9000000
background-alt = #aa130023
foreground = #afbfcf
foreground-alt = #646464
primary = #84369f
secondary = #ff00ff
alert = #ff0000
none = #00000000

;	################
;	##### BAR1 #####
;	################

[bar/bar1]
width = 100%
height = 15
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #ffffff

border-size = 4
border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Source Code Pro Medium:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = FontAwesome:pixelsize=8;1

modules-left = i3 uptime ip
modules-center = cpu memory
modules-right = ping filesystem dates

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

;   ################
;   ##### BAR2 #####
;   ################

;[bar/bar2]
;width = 100%
;height = 19
